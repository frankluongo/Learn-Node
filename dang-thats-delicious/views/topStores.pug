extends layout

block content
  .inner
    h1 Top #{stores.length} Stores
    table.table
      thead
        td photo
        td ranking
        td name
        td reviews
        td Average Rating
      each store, i in stores
        tr
          td
            a(href=`/store/${store.slug}`)
              img(src=h.storePhotoSrc(store.photo) width="200" alt=store.name)
          td #{i + 1}
          td: a(href=`/store/${store.slug}`) #{store.name}
          td= store.reviews.length
          td #{Math.round(store.averageRating * 10) / 10} / 5
